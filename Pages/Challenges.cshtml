@page
@model FitPeak.Pages.CreateChallengeModel;

<h1 style="text-align: center; margin-top: 7rem;">Create Challenge</h1>

<form method="post" class="container" style="width: 50rem;">
    <div class="form-group">
        <label asp-for="NewChallenge.Title" class="control-label"></label>
        <input asp-for="NewChallenge.Title" class="form-control" />
        <span asp-validation-for="NewChallenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewChallenge.Description" class="control-label"></label>
        <textarea asp-for="NewChallenge.Description" class="form-control"></textarea>
        <span asp-validation-for="NewChallenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewChallenge.Category" class="control-label"></label>
        <select asp-for="NewChallenge.Difficulty" class="form-control">
            <option value="Hard">Step</option>
            <option value="Medium">Squad</option>
            <option value="Easy">Cardio</option>
            <option value="Easy">Weight Loss</option>
        </select>
        <span asp-validation-for="NewChallenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewChallenge.Difficulty" class="control-label"></label>
        <select asp-for="NewChallenge.Difficulty" class="form-control">
            <option value="Hard">Hard</option>
            <option value="Medium">Medium</option>
            <option value="Easy">Easy</option>
        </select>
        <span asp-validation-for="NewChallenge.Difficulty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewChallenge.EndDate" class="control-label"></label>
        <input asp-for="NewChallenge.EndDate" type="datetime-local" class="form-control" id="endDate" />
        <span asp-validation-for="NewChallenge.EndDate" class="text-danger"></span>
    </div>
    </br>
    </br>
    <button type="submit" class="w-100 btn btn-lg btn-primary" style="height: 40px; text-align: center;">
        <div style="display: flex; justify-content: center; align-items: center; height: 100%;">
            Create
        </div>
    </button>

</form>

<script>
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0');
    var yyyy = today.getFullYear();
    var hh = String(today.getHours()).padStart(2, '0');
    var min = String(today.getMinutes()).padStart(2, '0');

    today = yyyy + '-' + mm + '-' + dd + 'T' + hh + ':' + min;

    document.getElementById("endDate").value = today;
</script>
