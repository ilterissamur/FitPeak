@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container" style="margin-top: 8rem; position: absolute; left: 46rem;">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-5">
            <div class="text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username."
                        disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary"
                    style="height: 40px; text-align: center;">
                    <div style="display: flex; justify-content: center; align-items: center; height: 100%;">
                        Change Email
                    </div>
            </form>
        </div>
    </div>
</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
