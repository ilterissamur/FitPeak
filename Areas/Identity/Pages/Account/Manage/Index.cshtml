@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container" style="position: absolute; left: 41rem; margin-top: 5rem;">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            </br>
            <div class="form-floating" style="text-align: center;">
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Picture)" width="80" height="80"
                    alt="Profile Picture" class="img-thumbnail" />
            </div>
            </br>
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username."
                        disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-group">
                    <label asp-for="FileUpload.FormFile">Profile Picture</label>
                    <input asp-for="FileUpload.FormFile" type="file" class="form-control" />
                    <span asp-validation-for="FileUpload.FormFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biography" class="control-label"></label>
                    <textarea asp-for="Biography" class="form-control"></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                </div>
                </br>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary"
                    style="height: 40px; text-align: center;">
                    <div style="display: flex; justify-content: center; align-items: center; height: 100%;">
                        Save
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
